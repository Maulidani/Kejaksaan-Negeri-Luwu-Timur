<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_95"
    tools:context=".view.kepaladesa.layananbidangtindakpidanaumum.DetailInfoPerkaraPidanaUmumActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bg_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_appbar_green"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_appbar_green" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_appbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/detail"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg_appbar"
        app:layout_constraintLeft_toRightOf="@+id/iv_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg_appbar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="32dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_penyidik"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_penyidik"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_penyidik" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_penyidik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/penyidik"
                        app:layout_constraintLeft_toRightOf="@id/iv_penyidik"
                        app:layout_constraintTop_toTopOf="@id/iv_penyidik" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_nama_penyidik"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_penyidik"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_penyidik"
                        tools:text="Nama penyidik" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tersangka"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_tersangka"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_tersangka" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tersangka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/tersangka"
                        app:layout_constraintLeft_toRightOf="@id/iv_tersangka"
                        app:layout_constraintTop_toTopOf="@id/iv_tersangka" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_nama_tersangka"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_tersangka"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_tersangka"
                        tools:text="Nama tersangka" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tgl_p_16"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_tgl_p_16"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_tgl_p_16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_tgl_p_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/no_dan_tanggal_p_16"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_p_16"
                        app:layout_constraintTop_toTopOf="@id/iv_tgl_p_16" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tgl_p_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_p_16"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_tgl_p_16"
                        tools:text="Tanggal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tgl_terima_berkas"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_tgl_terima_berkas"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_tgl_terima_berkas" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_tgl_terima_berkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/tanggal_terima_berkas"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_terima_berkas"
                        app:layout_constraintTop_toTopOf="@id/iv_tgl_terima_berkas" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tgl_terima_berkas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_terima_berkas"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_tgl_terima_berkas"
                        tools:text="Tanggal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_spdp"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_spdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_spdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_spdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/no_dan_tanggal_spdp"
                        app:layout_constraintLeft_toRightOf="@id/iv_spdp"
                        app:layout_constraintTop_toTopOf="@id/iv_spdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_spdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_spdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_spdp"
                        tools:text="Tanggal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_pasal"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_pasal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_pasal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_pasal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/pasal"
                        app:layout_constraintLeft_toRightOf="@id/iv_pasal"
                        app:layout_constraintTop_toTopOf="@id/iv_pasal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pasal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_pasal"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_pasal"
                        tools:text="Pasal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tgl_p_16_a"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_tgl_p_16_a"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_tgl_p_16_a" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_tgl_p_16_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/no_dan_tanggal_p_16_a"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_p_16_a"
                        app:layout_constraintTop_toTopOf="@id/iv_tgl_p_16_a" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_tgl_p_16_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_tgl_p_16_a"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_tgl_p_16_a"
                        tools:text="Tanggal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_keterangan"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/ic_keterangan"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_keterangan" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_keterangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/keterangan"
                        app:layout_constraintLeft_toRightOf="@id/iv_keterangan"
                        app:layout_constraintTop_toTopOf="@id/iv_keterangan" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_keterangan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@id/iv_keterangan"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_keterangan"
                        tools:text="Keterangan" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>